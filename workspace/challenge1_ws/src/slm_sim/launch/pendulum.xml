<launch>

    <!--Load mesh model -->
    
    

    <!--Robot State Publisher -->
    <node pkg="robot_state_publisher" exec="robot_state_publisher" name="slm_state_pub" >
        <arg name="urdf_model" value="$(find py_launch_example)/urdf/pendulum.urdf"/>
        <param name="robot_description" command="cat $(arg urdf_model)" />
    </node>

    <!--Joint State Publisher --> <!--Uncomment for TESTING ONLY (COMMENT YOUR JOINT STATE PUBLISHER)-->    
    <!--<node name="joint_state_publisher_gui" pkg="joint_state_publisher_gui" exec="joint_state_publisher_gui">
    </node>-->

    
    <node name="rviz" pkg="rviz" exec="rviz" args="-d $(arg rvizconfig)" required="true"> 
        <arg name="rvizconfig" default="$(find py_launch_example)/rviz/manipulator.rviz" />
    </node>


</launch>